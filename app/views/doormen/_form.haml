= form_for(@doorman) do |f|
  - if @doorman.errors.any? 
    .error_explanation
      %h2 = pluralize(@doorman.errors.count, "error") %  prohibited this doorman from being saved:

      %ul 
        - @doorman.errors.full_messages.each do |msg|
          %li %%= msg

  .field 
    = f.label :phone
    %br/
    = f.text_field :phone 

  .actions 
    = f.submit
