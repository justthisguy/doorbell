= form_for(@event) do |f| 
  - if @event.errors.any? 
    #error_explanation
      %h2= pluralize(@event.errors.count, "error")   
      prohibited this event from being saved:

      %ul
      - @event.errors.full_messages.each do |msg|
        %li= msg 

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :start
    %br/ 
    = f.datetime_select :start

  .field
    = f.label :duration
    %br/
    = f.text_field :duration
  
  .field
    = f.label :frequency
    %br/
    = f.text_field :frequency

  .field
    = f.label :reserves
    %br/
    = f.text_field :reserves


  .actions
    = f.submit
